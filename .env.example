# ==============================================
# Rangefinder Environment Variables
# ==============================================
# Copy this file to .env.local and fill in your values.

# Mock Mode (set both to "true" for local dev without external services)
USE_MOCK_ENGINE=true
NEXT_PUBLIC_MOCK_MODE=true

# App
NEXT_PUBLIC_APP_URL=http://localhost:3000

# PostgreSQL (Supabase or any PostgreSQL provider)
DATABASE_URL=postgresql://user:password@host:6543/database
DIRECT_URL=postgresql://user:password@host:5432/database

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
CLERK_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Stripe Billing
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_STARTER_PRICE_ID=price_...
STRIPE_GROWTH_PRICE_ID=price_...

# AI Engine APIs
PERPLEXITY_API_KEY=pplx-...
DATAFORSEO_LOGIN=your_login
DATAFORSEO_PASSWORD=your_password

# Google OAuth (GA4 + Search Console)
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret

# Inngest (Background Jobs)
INNGEST_EVENT_KEY=your_event_key
INNGEST_SIGNING_KEY=your_signing_key

# Encryption (AES-256-GCM for stored OAuth tokens)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_64_char_hex_key
